generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  role      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  approvals      ApprovalWorkflow[] @relation("Approver")
  requestedApprovals ApprovalWorkflow[] @relation("Requester")
  ownedControls  MaterialControl[]
  ownedRisks     Risk[]
  ownedIssues    Issue[]
}

model EffectivenessCriteria {
  id            String   @id @default(uuid())
  dimension     String
  criteria      String
  threshold     String
  evidenceType  String
  frequency     String
  status        String
  approvedBy    String?
  approvedDate  DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model FrameworkComponent {
  id           String   @id @default(uuid())
  type         String
  name         String
  description  String
  owner        String
  status       String
  lastReviewed DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model MaterialControl {
  id                String   @id @default(uuid())
  name              String
  description       String
  materialityScore  Int
  rationale         String
  owner             String
  ownerId           String?
  evidenceSource    String
  testingFrequency  String
  dependencies      String
  effectiveness     String
  lastTested        DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  userOwner    User?       @relation(fields: [ownerId], references: [id])
  testPlans    TestPlan[]
  issues       Issue[]
}

model Risk {
  id               String   @id @default(uuid())
  title            String
  description      String
  category         String
  inherentRisk     String
  residualRisk     String
  owner            String
  ownerId          String?
  linkedObjectives String
  linkedControls   String
  lastAssessed     DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  userOwner User? @relation(fields: [ownerId], references: [id])
}

model Control {
  id             String   @id @default(uuid())
  name           String
  description    String
  type           String
  automation     String
  frequency      String
  owner          String
  linkedRisks    String
  effectiveness  String
  evidenceSource String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model TestPlan {
  id                  String   @id @default(uuid())
  controlId           String
  controlName         String
  testType            String
  tester              String
  scheduledDate       DateTime
  status              String
  results             String?
  exceptions          String?
  remediationRequired Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  control MaterialControl @relation(fields: [controlId], references: [id])
}

model Issue {
  id              String   @id @default(uuid())
  title           String
  description     String
  severity        String
  controlId       String
  discoveredDate  DateTime
  status          String
  owner           String
  ownerId         String?
  dueDate         DateTime
  remediationPlan String?
  retestDate      DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  control   MaterialControl @relation(fields: [controlId], references: [id])
  userOwner User?           @relation(fields: [ownerId], references: [id])
}

model IntegrationStatus {
  id               String   @id @default(uuid())
  system           String   @unique
  status           String
  lastSync         DateTime
  signalsReceived  Int      @default(0)
  exceptionsRaised Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model ControlGap {
  id               String   @id @default(uuid())
  source           String
  title            String
  description      String
  affectedControls String
  riskTheme        String
  priority         String
  proposedAction   String
  status           String
  identifiedDate   DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model ApprovalWorkflow {
  id              String   @id @default(uuid())
  itemType        String
  itemId          String
  itemName        String
  requesterId     String
  currentApproverId String
  status          String
  submittedDate   DateTime
  comments        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  requester       User @relation("Requester", fields: [requesterId], references: [id])
  currentApprover User @relation("Approver", fields: [currentApproverId], references: [id])
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  action    String
  entity    String
  entityId  String
  changes   String
  timestamp DateTime @default(now())
}
